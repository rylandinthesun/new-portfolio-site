---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<div class="flex flex-col w-full max-w-4xl">
  <h1 class="text-3xl font-bold pb-2 mb-3 text-slate-800 w-full font-mono">
    {title}
  </h1>
  <div class="flex flex-wrap gap-4 items-center max-w-4xl">
    <slot />
  </div>
</div>
