---
import Image from "astro/components/Image.astro";
import Navbar from "../components/Navbar.astro";
import AnimationObserverScript from "../scripts/AnimationObserverScript.astro";

export interface Props {
  title: string;
  description: string;
  noFooter?: boolean;
}

const { title, description, noFooter = false } = Astro.props as Props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="/styles/animations.css" type="text/css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="/public/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/public/apple-touch-icon.png"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow+Semi+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Rubik+Mono+One&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="company" />
    <meta property="og:image" content="/public/meta-headshot.png" />
    <meta property="og:image:secure_url" content="/public/meta-headshot.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@simplyagree" />
    <meta name="twitter:creator" content="@simplyagree" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/public/meta-headshot.png" />
  </head>

  <body>
    <Navbar />
    <slot />
  </body>
  <AnimationObserverScript />
</html>
